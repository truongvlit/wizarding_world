    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>truongvl.controllers.account.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowSurveyController</servlet-name>
        <servlet-class>truongvl.controllers.survey.ShowSurveyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAnswerController</servlet-name>
        <servlet-class>truongvl.controllers.survey.GetAnswerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitLoginController</servlet-name>
        <servlet-class>truongvl.controllers.account.InitLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>truongvl.controllers.account.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>truongvl.controllers.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMyCollectionController</servlet-name>
        <servlet-class>truongvl.controllers.collection.ShowMyCollectionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitRegisterController</servlet-name>
        <servlet-class>truongvl.controllers.account.InitRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>truongvl.controllers.account.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDetailController</servlet-name>
        <servlet-class>truongvl.controllers.product.ShowDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCollectionController</servlet-name>
        <servlet-class>truongvl.controllers.collection.AddToCollectionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromCollectionController</servlet-name>
        <servlet-class>truongvl.controllers.collection.RemoveFromCollectionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitSurveyController</servlet-name>
        <servlet-class>truongvl.controllers.survey.InitSurveyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllController</servlet-name>
        <servlet-class>truongvl.controllers.product.ShowAllController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowSurveyController</servlet-name>
        <url-pattern>/survey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAnswerController</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitLoginController</servlet-name>
        <url-pattern>/init-login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMyCollectionController</servlet-name>
        <url-pattern>/my-collection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitRegisterController</servlet-name>
        <url-pattern>/init-register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDetailController</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCollectionController</servlet-name>
        <url-pattern>/add-to-collection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFromCollectionController</servlet-name>
        <url-pattern>/remove-from-collection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitSurveyController</servlet-name>
        <url-pattern>/init-survey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllController</servlet-name>
        <url-pattern>/collection</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            init-login
        </welcome-file>
    </welcome-file-list>
</web-app>
